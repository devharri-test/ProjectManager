<!-- Modal - Edit relation -->
<EditRelationModal UpdatedRelation="@UpdatedPart" PossibleParents="@PossibleParents" OnSubmitCallback="@SubmitUpdatePart"></EditRelationModal>
@code {
    [Parameter]
    public int? PartId { get; set; }
    public RelationModel part = new();
    protected override async Task OnInitializedAsync()
    {
        GetRelationWithId();
        EmptyClass.SetPart(part.Relation_name, PartId);
        UpdatedPart = part;
        await GetPossibleParents();
    }
    //Get relation
    private void GetRelationWithId()
    {
        part = RelationDataAccess.GetRelation(PartId);
    }
    #region FeatureUpdatePart
    private RelationModel UpdatedPart = new();
    private List<RelationModel> PossibleParents = new();
    private async Task GetPossibleParents()
    {
        if (part.Parent_id >= 0)
        {
            RelationModel parent = RelationDataAccess.GetRelation(part.Parent_id);
            PossibleParents = await RelationDataAccess.GetChildRelations(parent.Parent_id);
        }
    }
    private async Task SubmitUpdatePart()
    {
        var result = await RelationDataAccess.UpdateRelationAsync(UpdatedPart);
    }
    #endregion
}