<!-- Child relation cards -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-4">
    @foreach (RelationModel childRelation in ChildRelations)
    {
        <ControlGroupCard OnClickCallback="ClickCard" CardId="@childRelation.Id" CardName="@childRelation.Relation_name" CardText="Some control group descriptive text here" FooterText="..."></ControlGroupCard>
    }
</div>
<!--  Edit menu -->
<div class="dropup" style=" position: absolute; right: 20px; bottom: 20px;">
    <button type="button" class="btn btn-primary dropdown" data-bs-toggle="dropdown">
        <span class="oi oi-plus" aria-hidden="true"></span>
    </button>
    <ul class="dropdown-menu">
        <li><button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="dropdown-item">Add</button></li>
        <li><button class="dropdown-item disabled">Edit</button></li>
    </ul>
</div>
<!-- Modal - Add child relation -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Add new control group</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@NewControlGroup" OnSubmit="@Submit" class="row g-3">
                    <div class="col-12 mb-1">
                        <label for="formGroupExampleInput2" class="form-label">Control group name</label>
                        <InputText class="form-control" id="formGroupExampleInput2" @bind-Value="NewControlGroup!.Relation_name" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Add</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<!-- Modal - Delete child relation -->
<div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel1">Delete control group</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="row">
                    <div class="col">
                        Are you sure? This will delete control group and all its child relations!
                    </div>
                </div>
                <div class="row justify-content-evenly">
                    <div class="col-4">
                        <button @onclick="DeleteControlGroup" type="button" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    #region PageBase
    [Parameter]
    public int? ControllerId { get; set; }

    public int? ClickedCardId { get; set; }

    public RelationModel controller = new();
    public List<RelationModel> ChildRelations = new();

    protected override void OnInitialized()
    {
        GetRelationWithId();
        GetChildRelations();
        EmptyClass.SetController(controller.Relation_name, ControllerId);
    }
    //Get relation
    private void GetRelationWithId()
    {
        controller = RelationDataAccess.GetRelation(ControllerId);
    }
    //Get all child relations
    private void GetChildRelations()
    {
        ChildRelations = RelationDataAccess.GetChildRelations(ControllerId);
    }
    protected void ClickCard(int? id)
    {
        ClickedCardId = id;
    }
    #endregion
    #region FeatureCreateNewControlGroup
    public RelationModel NewControlGroup = new();
    private async Task Submit()
    {
        NewControlGroup.Parent_id = ControllerId;
        NewControlGroup.Role_id = 5;
        var result = await RelationDataAccess.PostRelationAsync(NewControlGroup);
        GetChildRelations();
    }
    #endregion
    #region FeatureDeleteControlGroup
    private async Task DeleteControlGroup()
    {
        await RelationDataAccess.DeleteRelationAsync(ClickedCardId);
        GetChildRelations();
    }
    #endregion
}