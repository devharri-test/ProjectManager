            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-3">
        <div class="card p-0 h-100" style="background-image: linear-gradient(180deg, rgba(25,55,80,1) 0%, rgba(50,110,129,1) 80%); color: rgb(250,250,250); ">
            <div class="card-header">
                Info card
            </div>
            <div class="card-body">
                <h6>Info header</h6>
                <p class="card-text">Informaton text here</p>
                <p class="card-text">Informaton text here</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-3">
        <div class="card p-0 h-100" style="background-image: linear-gradient(180deg, rgba(25,55,80,1) 0%, rgba(50,110,129,1) 80%); color: rgb(250,250,250); ">
            <div class="card-header">
                Info card
            </div>
            <div class="card-body">
                <h6>Info header</h6>
                <p class="card-text">Informaton text here</p>
                <p class="card-text">Informaton text here</p>
            </div>
        </div>
    </div>
</div>
<!-- Child relation cards -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-4">
    @foreach (RelationModel childRelation in ChildRelations)
    {
        <DepartmentCard OnClickCallback="ClickCard" CardId="@childRelation.Id" CardName="@childRelation.Relation_name" CardText="Some department descriptive text here" FooterText="..."></DepartmentCard>
    }
</div>
<!--  Edit menu -->
<div class="dropup" style=" position: absolute; right: 20px; bottom: 20px;">
    <button type="button" class="btn btn-primary p-2 dropdown" data-bs-toggle="dropdown">
        <span class="oi oi-plus p-0" aria-hidden="true"></span>
    </button>
    <ul class="dropdown-menu">
        <li><button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="dropdown-item">Add</button></li>
        <li><button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop2" class="dropdown-item">Edit</button></li>
    </ul>
</div>
<!-- Modal - Add child relation -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Add new department</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@NewDepartment" OnSubmit="@SubmitAddDepartment" class="row g-3">
                    <div class="col-12 mb-1">
                        <label for="formGroupExampleInput2" class="form-label">Department name</label>
                        <InputText class="form-control" id="formGroupExampleInput2" @bind-Value="NewDepartment!.Relation_name" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Add</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<!-- Modal - Delete child relation -->
<div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel1">Delete department</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="row">
                    <div class="col">
                        Are you sure? This will delete department and all its child relations!
                    </div>
                </div>
                <div class="row justify-content-evenly">
                    <div class="col-4">
                        <button @onclick="DeleteDepartment" type="button" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal - Edit relation -->
<div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel2">Edit Location</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <EditForm Model="@UpdateLocation" OnSubmit="@SubmitUpdateLocation" class="row g-3">
                    <div class="col-12 mb-1">
                        <label for="formGroupExampleInput2" class="form-label">Location name</label>
                        <InputText class="form-control" id="formGroupExampleInput2" @bind-Value="UpdateLocation!.Relation_name" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Update</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
@code {
    #region PageBase
    [Parameter]
    public int? LocationId { get; set; }

    public int? ClickedCardId { get; set; }

    public RelationModel location = new();
    public List<RelationModel> ChildRelations = new();

    protected override void OnInitialized()
    {
        GetRelationWithId();
        GetChildRelations();
        EmptyClass.SetLocation(location.Relation_name, LocationId);
    }
    //Get relation
    private void GetRelationWithId()
    {
        location = RelationDataAccess.GetRelation(LocationId);
    }
    //Get all child relations
    private void GetChildRelations()
    {
        ChildRelations = RelationDataAccess.GetChildRelations(LocationId);
    }
    //Save clicked card's id
    protected void ClickCard(int? id)
    {
        ClickedCardId = id;
    }
    #endregion
    #region FeatureCreateNewDepartment
    public RelationModel NewDepartment = new();

    private async Task SubmitAddDepartment()
    {
        NewDepartment.Parent_id = LocationId;
        NewDepartment.Role_id = 2;
        var result = await RelationDataAccess.PostRelationAsync(NewDepartment);
        GetChildRelations();
    }
    #endregion
    #region FeatureDeleteDepartment
    private async Task DeleteDepartment()
    {
        await RelationDataAccess.DeleteRelationAsync(ClickedCardId);
        GetChildRelations();
    }
    #endregion

    #region FeatureUpdateLocation
    public RelationModel UpdateLocation = new();
    private async Task SubmitUpdateLocation()
    {
        var result = await RelationDataAccess.UpdateRelationAsync(LocationId, UpdateLocation.Relation_name);
        GetChildRelations();
    }
    #endregion
}